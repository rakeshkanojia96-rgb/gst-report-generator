rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection: one document per user, doc ID must equal the user's UID
    match /users/{uid} {
      // Only the authenticated owner can read their own document
      allow read: if request.auth != null && request.auth.uid == uid;

      // Create allowed only by the owner and must include a non-empty gst_number
      allow create: if request.auth != null
                    && request.auth.uid == uid
                    && request.resource.data.gst_number is string
                    && request.resource.data.gst_number.size() > 0;

      // Update allowed only by the owner AND gst_number must remain unchanged
      allow update: if request.auth != null
                    && request.auth.uid == uid
                    && request.resource.data.gst_number == resource.data.gst_number;

      // Optional: allow delete only by the owner
      allow delete: if request.auth != null && request.auth.uid == uid;
    }
  }
}
